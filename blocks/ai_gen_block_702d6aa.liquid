{% doc %}
  @prompt
    This layout showcases a clean, minimalist e-commerce UI featuring a **“Latest Drop”** section. It uses a **two-column grid** with high-quality product images, clear typography, and concise descriptions. Each item includes a **product name, price, and visual focus** on design details. The **“Discover More”** button encourages exploration and enhances user engagement.
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-latest-drop-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-latest-drop-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-latest-drop-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-latest-drop-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px;
    letter-spacing: 0.02em;
  }

  .ai-latest-drop-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    line-height: 1.6;
  }

  .ai-latest-drop-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: {{ block.settings.button_spacing }}px;
  }

  .ai-latest-drop-product-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease;
  }

  .ai-latest-drop-product-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-latest-drop-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_aspect_ratio | times: 100 }}%;
    background-color: {{ block.settings.image_bg_color }};
    margin-bottom: {{ block.settings.image_text_spacing }}px;
    overflow: hidden;
  }

  .ai-latest-drop-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-latest-drop-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.image_bg_color }};
  }

  .ai-latest-drop-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-latest-drop-info-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-latest-drop-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 8px;
    font-weight: 500;
    line-height: 1.4;
  }

  .ai-latest-drop-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    font-weight: 400;
  }

  .ai-latest-drop-cta-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-latest-drop-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 500;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .ai-latest-drop-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 749px) {
    .ai-latest-drop-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.6 }}px 16px {{ block.settings.section_padding_bottom | times: 0.6 }}px;
    }

    .ai-latest-drop-grid-{{ ai_gen_id }} {
      gap: {{ block.settings.grid_gap | times: 0.7 }}px;
    }

    .ai-latest-drop-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-latest-drop-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }

    .ai-latest-drop-product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_title_size | times: 0.9 }}px;
    }

    .ai-latest-drop-product-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_price_size | times: 0.9 }}px;
    }

    .ai-latest-drop-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-latest-drop-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-latest-drop-container-{{ ai_gen_id }}">
    {% if block.settings.show_header %}
      <div class="ai-latest-drop-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-latest-drop-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-latest-drop-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-latest-drop-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% assign product_key = 'product_' | append: i %}
        {% assign product = block.settings[product_key] %}

        {% if product != blank %}
          <a href="{{ product.url }}" class="ai-latest-drop-product-{{ ai_gen_id }}">
            <div class="ai-latest-drop-image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-latest-drop-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="800"
                  height="{{ 800 | times: block.settings.image_aspect_ratio }}"
                >
              {% else %}
                <div class="ai-latest-drop-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-latest-drop-info-{{ ai_gen_id }}">
              <h3 class="ai-latest-drop-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
              <div class="ai-latest-drop-product-price-{{ ai_gen_id }}">
                {{ product.price | money }}
              </div>
            </div>
          </a>
        {% else %}
          <div class="ai-latest-drop-product-{{ ai_gen_id }}">
            <div class="ai-latest-drop-image-wrapper-{{ ai_gen_id }}">
              <div class="ai-latest-drop-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            </div>
            <div class="ai-latest-drop-info-{{ ai_gen_id }}">
              <h3 class="ai-latest-drop-product-title-{{ ai_gen_id }}">Product {{ i }}</h3>
              <div class="ai-latest-drop-product-price-{{ ai_gen_id }}">{{ 0 | money }}</div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_button %}
      <div class="ai-latest-drop-cta-{{ ai_gen_id }}">
        <a href="{{ block.settings.button_link }}" class="ai-latest-drop-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

